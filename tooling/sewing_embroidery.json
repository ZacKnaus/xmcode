{
  "sewing_machine": {
    "type": "sewing_machine",
    "max_speed": 1000,
    "num_needles": 1,
    "thread_tension_range": {
      "min": 0,
      "max": 100
    },
    "commands": {
      "stitch": {
        "function": "sewing_machine_stitch(length)",
        "parameters": {
          "length": {
            "type": "number",
            "min": 0,
            "max": 100
          }
        },
        "async": false,
        "comments": "Performs a stitch with the specified length."
      },
      "set_thread_tension": {
        "function": "sewing_machine_set_thread_tension(tension)",
        "parameters": {
          "tension": {
            "type": "number",
            "min": 0,
            "max": 100
          }
        },
        "async": false,
        "comments": "Sets the thread tension."
      }
    }
  }
}
